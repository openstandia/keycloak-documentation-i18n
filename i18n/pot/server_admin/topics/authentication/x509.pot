"            </ssl>\n"
"        </server-identities>\n"
"        <authentication>\n"
"            <truststore path=\"truststore.jks\" \n"
"                        relative-to=\"jboss.server.config.dir\" \n"
"                        keystore-password=\"truststore password\"/>\n"
"        </authentication>\n"
"    </security-realm>\n"
